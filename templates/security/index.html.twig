{% extends 'base.html.twig' %}

{% block title %}Login Entrada-Salida{% endblock %}

{% block body %}
<div class="vh-100" style="background:#e9ecef;">

<div style="width: 60%;
  padding: 50px;
  margin-left: auto;
  margin-right: auto;
  padding-top: 5%;
  border-radius: 0.25rem">



    <div class="login-box">
        <div class="login-logo" style="text-align: center; font-size:40px">
        <b>HCD</b>
        </div>
        <!-- /.login-logo -->
        <div class="card"  style="box-shadow: 0 3px 3px rgba(0,0,0,0.2); padding-left: 5%; padding-right: 5%">
            <div class="card-body login-card-body" >
                <p class="login-box-msg" style="text-align:center"> Inicie Sesi√≥n</p>
                {# {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %} #}
			{{form_start(form)}}
                
                    <div class="input-group mb-3" style="padding-left: 5%;">
				        {{form_widget(form.usuario,{'attr': {'class': 'col-sm-10', 'placeholder':'Usuario'}})}}

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3" style="padding-left: 5%;">
				        {{form_widget(form.password,{'attr': {'class': 'col-sm-10', 'placeholder':'Password'}})}}
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">

                        </div>


                        <!-- /.col -->
                        <div class="col-4"  style="padding-right: 9%;" >
				        {{form_row(form.submit,{'attr': {'class': 'col-sm-12 btn btn-primary btn-block'}})}}
                        </div>
                        <!-- /.col -->
                    </div>
				{{form_end(form)}}

                <!-- /.social-auth-links -->


            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
<!-- /.login-box -->
</div>
</div>




{% endblock %}
